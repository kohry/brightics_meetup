<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주행거리"/>

    <EditText
            android:id="@+id/km"
            android:layout_width="300px"
              android:layout_height="wrap_content"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="연식"/>

    <EditText android:id="@+id/age"
            android:layout_width="300px"
              android:layout_height="wrap_content"
    />

    <Button
            android:id="@+id/predict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예측!"/>


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="xgboost"
    android:layout_marginTop="30px"/>

    <TextView
              android:id="@+id/result_xgb"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="50px"
              android:text="0"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="linear regression"
    android:layout_marginTop="30px"/>

    <TextView
            android:id="@+id/result_lr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:text="0"/>

</LinearLayout>